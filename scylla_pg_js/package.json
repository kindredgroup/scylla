{
  "name": "scylla_pg_client",
  "version": "0.1.0",
  "description": "Scylla task scheduler, javascript binding.for postgres",
  "type": "module",
  "engines": {
    "node": ">=14.16.1",
    "npm": ">=6.14.12"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/kindredgroup/scylla.git"
  },
  "author": "Anil Sharma",
  "email": "asharmaanil@gmail.com",
  "license": "MIT",
  "devDependencies": {
    "@napi-rs/cli": "^2.12.0",
    "cross-env": "^7.0.3",
    "jest": "^27.5.0",
    "uuidv4": "^6.2.12"
  },
  "napi": {
    "name": "scylla"
  },
  "scripts": {
    "build": "napi build --release --dts type.d.ts",
    "build:debug": "napi build --dts type.d.ts",
    "testbase": "cross-env NODE_ENV=testing node --no-warnings --experimental-specifier-resolution=node --experimental-vm-modules --enable-source-maps",
    "test": "npm run testbase -- node_modules/.bin/jest --passWithNoTests --collectCoverage index.test.js",
    "test-js": "jest index.test.js",
    "node:base": "node --no-warnings --experimental-specifier-resolution=node --experimental-vm-modules --enable-source-maps --harmony-top-level-await",
    "bundle:packages": "npm run node:base -- deployment/npm/bundle-npm.mjs"
  },
  "jest": {
    "verbose": true
  }
}
