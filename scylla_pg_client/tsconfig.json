{
  "compilerOptions": {
    "target": "ES2021",
    "strict": true,
    "moduleResolution": "node",
    "module": "ESNext",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "esModuleInterop": true,
    "allowJs": true,
    "outDir": "./",
    "allowSyntheticDefaultImports": true,
    "declaration": true
  },
  "include": ["./**/*.js", "./**/*.mjs", "./**/*.ts", "./**/*.tsx", "/**/*.d.ts"],
  "files": ["index.ts"],
  "exclude": ["node_modules", "dist"]
}
